<section class="container-datatable">

    <div class="container">

        <div class="row">
            <div class="col-12">

                <div class="nav-tab-ost mt-3 mb-3">

                    <ul class="nav nav-pills" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="tokenTransferTab" data-toggle="pill" href="#tokenTransfer" role="tab" aria-controls="tokenTransfer" aria-selected="true">Token Transfer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tokenHoldersTab" data-toggle="pill" href="#tokenHolders" role="tab" aria-controls="tokenHolders" aria-selected="false">Token Holders</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-2" id="myTabContent">
                        <div class="tab-pane show active" id="tokenTransfer" role="tabpanel" aria-labelledby="tokenTransferTab">

                            <table id="tokenDetailsRecentTrans" class="table table-hover table-responsive-sm token-table" cellspacing="0">

                                {{>transactionsDataColumns}}

                            </table>

                        </div>
                        <div class="tab-pane" id="tokenHolders" role="tabpanel" aria-labelledby="tokenHoldersTab">
                            <table id="tokenDetailsTokenHolders" class="table table-hover table-responsive-sm token-table" cellspacing="0">

                                <script type="custom/ost" id="dt-holders-col-1">
                                    <div class="cell d-flex align-items-center">
                                         <div class="circle circle-sm">
                                           <div>[[symbol]]</div>
                                        </div>
                                        <a href="[[redirect_url]]" class="d-inline-block ml-2">[[name]]</a>
                                    </div>
                                </script>
                                <script type="custom/ost" id="dt-holders-col-2">
                                    <div class="cell d-flex align-items-center">
                                        <span>Available Balance</span>
                                    </div>
                                </script>
                                <script type="custom/ost" id="dt-holders-col-3">
                                        <div class="cell d-flex align-items-center">
                                        <span class="staked-coin icon"></span>
                                            <span class="badge badge-primary">[[tokens]] [[coin_name]]</span>
                                            <span class="ml-1">([[value]] OST)</span>
                                        </div>
                                </script>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

{{#contentFor "pageScripts"}}
    <script type="text/javascript">
        $(document).ready(function() {
            btx.tokenDetails.init({
                transactions_url: "{{meta.transactions_url}}",
                token_holders_url:"{{meta.token_holders_url}}",
                token_transfer_graph_url: "{{meta.token_transfer_graph_url}}",
                token_volume_graph_url: "{{meta.token_volume_graph_url}}"
            });
        });
    </script>
{{/contentFor}}